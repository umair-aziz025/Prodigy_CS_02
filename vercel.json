{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "mkdir -p public && cp *.html *.css *.js public/ || (if not exist public mkdir public && copy *.html public\\ && copy *.css public\\ && copy *.js public\\)",
  "outputDirectory": "public",
  "installCommand": "npm install --production",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        },
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        }
      ]
    }
  ]
}
